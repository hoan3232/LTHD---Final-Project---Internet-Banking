generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model CAccount {
  id      Int      @id @default(autoincrement())
  uname   String   @unique
  passwd  String
  cname   String
  email   String   @unique
  phone   String   @unique
  CCredit CCredit?
}

model CCredit {
  id       Int      @id @default(autoincrement())
  ownerId  Int      @unique
  crenum   String   @unique
  CAccount CAccount @relation(fields: [ownerId], references: [id])
}
